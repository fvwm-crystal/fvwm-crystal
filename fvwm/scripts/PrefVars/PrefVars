# Add line
Widget 32
Property
 Flags NoReliefString
 Position 625 125
 Size 170 35
 Type PushButton
 LocaleTitle {Add line}
Main
 Case message of
  SingleClic :
  Begin
      Set $cmd = {echo "}$desktopd{"|sed -e "s:^.*$:&}$DDstring{|:"}
      Set $desktopd = (GetOutput $cmd 1 -1)
      HideWidget 3
      ChangeTitle 3 $desktopd
      ShowWidget 3
      Set $oldDDstring = $DDstring
  End
End

# Save desktop dirs
Widget 33
Property
 Flags NoReliefString
 Position 625 125
 Size 170 35
 Type PushButton
 LocaleTitle {Save}
Main
 Case message of
  SingleClic :
  Begin
    Set $cmd = {PipeRead 'echo "}$desktopd{"| sed -e \'s:|$::\' | tr \'|\' \'\\n\'>}$dfile{'}
    Do $cmd
#  Do {Echo cmd: }$cmd
#    WriteToFile $dfile $desktopd # crash
  End
End

